<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

    <FrameLayout
        android:id="@+id/llToast"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="340dp"
            android:src="@drawable/iteminfo_bg"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center_horizontal"
            android:ellipsize="middle"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Name"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="110dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toast_image"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/bi_darkshrine"/>

            <LinearLayout
                android:id="@+id/firstColumn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toast_mineralsimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/bm_minerals"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/toast_minerals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="10dp"
                        android:text="10"
                        android:textColor="@color/colorHightlight"
                        android:visibility="visible"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/toast_gasimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/bm_gas"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/toast_gas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="10dp"
                        android:text="10"
                        android:textColor="@color/colorHightlight"
                        android:visibility="visible"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondColumn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/toast_supplyimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/bm_supply_terrran"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/toast_supply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="10dp"
                        android:text="10"
                        android:textColor="@color/colorHightlight"
                        android:visibility="visible"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/toast_timeimg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/bm_timer"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/toast_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="10dp"
                        android:text="10"
                        android:textColor="@color/colorHightlight"
                        android:visibility="visible"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtRequirementInfo"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"/>

    </FrameLayout>
</RelativeLayout>