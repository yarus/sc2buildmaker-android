<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/tile_list_item_size"
                                                app:mrl_rippleAlpha="0.5"
                                                app:mrl_rippleColor="@color/colorHightlight"
                                                app:mrl_rippleHover="true"
                                                app:mrl_rippleOverlay="true">

    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFaction"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:src="@mipmap/ic_zerg_white"/>

                <TextView
                    android:id="@+id/txtVs"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="VS"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imgVsFaction"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:src="@mipmap/ic_terran_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="19/12/2015"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/txtLength"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="end"
                    android:text="Length: 06:00"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtBuildName"
            android:layout_width="fill_parent"
            android:layout_height="63dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:gravity="start|center"
            android:text="Polt 2 Reaper FE to Helbat Push"
            android:textColor="@android:color/white"
            android:textSize="14sp">
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            android:layout_width="0dp"
                                                            android:layout_height="fill_parent"
                                                            android:layout_gravity="center"
                                                            android:layout_weight="1"
                                                            app:mrl_rippleAlpha="0.5"
                                                            app:mrl_rippleColor="@color/colorHightlight"
                                                            app:mrl_rippleHover="true"
                                                            app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/imgFav"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_favorite_no"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            android:layout_width="0dp"
                                                            android:layout_height="fill_parent"
                                                            android:layout_gravity="center"
                                                            android:layout_weight="1"
                                                            app:mrl_rippleAlpha="0.5"
                                                            app:mrl_rippleColor="@color/colorHightlight"
                                                            app:mrl_rippleHover="true"
                                                            app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_edit_build"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/colorHightlight"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/imgSimulate"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_results"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                                            android:layout_width="0dp"
                                                            android:layout_height="fill_parent"
                                                            android:layout_gravity="center"
                                                            android:layout_weight="1"
                                                            app:mrl_rippleAlpha="0.5"
                                                            app:mrl_rippleColor="@color/colorHightlight"
                                                            app:mrl_rippleHover="true"
                                                            app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@android:drawable/ic_media_play"/>

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>