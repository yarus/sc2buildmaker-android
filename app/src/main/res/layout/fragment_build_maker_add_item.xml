<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/additemheight"
    app:mrl_rippleAlpha="0.5"
    app:mrl_rippleColor="@color/colorHightlight"
    app:mrl_rippleDelayClick="false"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleInAdapter="true"
    android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popupelbg">

        <ImageView
            android:id="@+id/imgItemImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/bm_supply_protoss"/>

        <ImageView
            android:id="@+id/imgItemStatus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:src="@drawable/build_structure_terran" />

        <TextView
            android:id="@+id/txtItemCount"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="15"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtItemName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:text="Small Text"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/imgGrayed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</com.balysv.materialripple.MaterialRippleLayout>